<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Geben3">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Complimet to Matze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/compliment_to2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:textSize="30sp" android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
        <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/how_good" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="50dp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5" android:max="5"
                style="@android:style/Widget.Material.SeekBar"/>
        <TextView
                android:text="How positive is the compliment?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/compliment_to2" android:textColor="@android:color/black"
                android:textStyle="bold"/>
        <Switch
                android:text="Send it annonym  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/anonym" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/how_good" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:textColor="@android:color/black" android:textStyle="bold"/>
        <TextView
                android:text="The compliment helps against:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/anonym" android:textColor="@color/black"
                android:textStyle="bold"/>
        <CheckBox
                android:text="Sadness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_sad"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <CheckBox
                android:text="Incompetence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_incompetend" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBox_sad" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <Button
                android:text="Send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/geben3_send" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textColor="@color/colorPrimary"
                android:background="@android:color/white" android:backgroundTintMode="screen" android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.507" android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBox_lonely"/>
        <CheckBox
                android:text="Stress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_stress" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBox_incompetend" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <CheckBox
                android:text="Loneliness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_lonely" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBox_stress" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>