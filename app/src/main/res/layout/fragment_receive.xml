<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Receive">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/receiveScroll">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.akaita.android.circularseekbar.CircularSeekBar
                        android:id="@+id/bekommen_circular"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        app:enabled="true"
                        app:innerCircleColor="@color/blue"
                        app:min="0"
                        app:max="100"
                        app:progress="0"
                        app:progressTextSize="26"
                        app:progressTextColor="@color/colorAccent"
                        app:ringWidth="0.4"
                        app:ringColor="@color/blue"
                        app:showIndicator="true"
                        app:showInnerCircle="true"
                        app:showProgressText="false"
                        app:speedMultiplier="5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView"/>

                <TextView
                        android:text="How do you feel?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="30sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                <Button
                        android:text="Excited"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/excited"
                        style="@style/Widget.MaterialComponents.Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/bekommen_circular"
                        android:background="@android:color/white"
                        android:padding="2dp"
                        android:paddingBottom="2dp"
                        android:paddingEnd="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingStart="2dp"
                        android:paddingTop="2dp"
                        android:backgroundTintMode="screen"/>

                <Button
                        android:text="Stressed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stressed"
                        style="@style/Widget.MaterialComponents.Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/bekommen_circular"
                        app:layout_constraintStart_toEndOf="@+id/excited"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/lonely"
                        android:background="@android:color/white"
                        android:padding="2dp"
                        android:paddingBottom="2dp"
                        android:paddingEnd="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingStart="2dp"
                        android:paddingTop="2dp"
                        android:backgroundTintMode="screen"/>

                <Button
                        android:text="Lonely"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/lonely"
                        style="@style/Widget.MaterialComponents.Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/bekommen_circular"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@android:color/white"
                        android:padding="2dp"
                        android:paddingBottom="2dp"
                        android:paddingEnd="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingStart="2dp"
                        android:paddingTop="2dp"
                        android:backgroundTintMode="screen"/>

                <Button
                        android:text="Nostalgic"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/nostalgic"
                        app:layout_constraintStart_toStartOf="@+id/excited"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/excited"
                        style="@style/Widget.MaterialComponents.Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@android:color/black"
                        android:background="@android:color/white"
                        android:padding="2dp"
                        android:paddingBottom="2dp"
                        android:paddingEnd="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingStart="2dp"
                        android:paddingTop="2dp"
                        android:backgroundTintMode="screen"/>

                <Button
                        android:text="Anxious"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/anxious"
                        style="@style/Widget.MaterialComponents.Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/stressed"
                        app:layout_constraintStart_toStartOf="@+id/stressed"
                        android:background="@android:color/white"
                        android:padding="2dp"
                        android:paddingBottom="2dp"
                        android:paddingEnd="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingStart="2dp"
                        android:paddingTop="2dp"
                        android:backgroundTintMode="screen"/>

                <Button
                        android:text="Happy"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/happy"
                        style="@style/Widget.MaterialComponents.Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/lonely"
                        app:layout_constraintEnd_toEndOf="@+id/lonely"
                        android:background="@android:color/white"
                        android:padding="2dp"
                        android:paddingBottom="2dp"
                        android:paddingEnd="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingStart="2dp"
                        android:paddingTop="2dp"
                        android:backgroundTintMode="screen"/>

                <Button
                        android:text="Incompetend"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/incompetend"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/nostalgic"
                        app:layout_constraintStart_toStartOf="@+id/nostalgic"
                        style="@style/Widget.MaterialComponents.Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@android:color/black"
                        android:background="@android:color/white"
                        android:padding="2dp"
                        android:paddingBottom="2dp"
                        android:paddingEnd="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingStart="2dp"
                        android:paddingTop="2dp"
                        android:backgroundTintMode="screen"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                <Button
                        android:text="Sad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sad"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/anxious"
                        app:layout_constraintStart_toStartOf="@+id/anxious"
                        style="@style/Widget.MaterialComponents.Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@android:color/black"
                        android:background="@android:color/white"
                        android:padding="2dp"
                        android:paddingBottom="2dp"
                        android:paddingEnd="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingStart="2dp"
                        android:paddingTop="2dp"
                        android:backgroundTintMode="screen"/>

                <Button
                        android:text="I dont know"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/idk"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/happy"
                        app:layout_constraintEnd_toEndOf="@+id/happy"
                        style="@style/Widget.MaterialComponents.Button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@android:color/black"
                        android:background="@android:color/white"
                        android:padding="2dp"
                        android:paddingBottom="2dp"
                        android:paddingEnd="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingStart="2dp"
                        android:paddingTop="2dp"
                        android:backgroundTintMode="screen"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"/>

                <ImageView
                        android:src="@drawable/smiley1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/smiley"
                        android:layout_marginTop="100dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>


            </android.support.constraint.ConstraintLayout>
        </ScrollView>

        <Button
                android:text="Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/receiveScroll"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTintMode="src_over"
                android:backgroundTint="@color/colorPrimary"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="8dp"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>